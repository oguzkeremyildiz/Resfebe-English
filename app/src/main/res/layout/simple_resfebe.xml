<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:id="@+id/answerText"
        android:layout_width="253dp"
        android:layout_height="42dp"
        android:hint="Answer"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp"
        android:enabled="true"
        android:text="" />

    <Button
        android:id="@+id/controlButton"
        android:layout_width="109dp"
        android:layout_height="38dp"
        android:layout_below="@+id/answerText"
        android:layout_alignStart="@+id/answerText"
        android:layout_alignLeft="@+id/answerText"
        android:layout_marginTop="-88dp"
        android:text="@string/kontrol_yazi" />

    <Button
        android:id="@+id/passButton"
        android:layout_width="109dp"
        android:layout_height="38dp"
        android:layout_below="@+id/answerText"
        android:layout_alignEnd="@+id/answerText"
        android:layout_alignRight="@+id/answerText"
        android:layout_marginTop="-88dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="@string/pas_gec" />

    <ImageView
        android:id="@+id/image1"
        android:layout_width="155dp"
        android:layout_height="190dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="134dp"
        android:layout_marginEnd="-109dp"
        android:layout_marginRight="-109dp"
        android:layout_toStartOf="@+id/answerText"
        android:layout_toLeftOf="@+id/answerText" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="155dp"
        android:layout_height="190dp"
        android:layout_alignTop="@+id/image1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="21dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="21dp" />

</RelativeLayout>